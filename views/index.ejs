<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="float">
        <nav class="navbar bg-body-tertiary" style="margin-bottom: 20px;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    Bootstrap
                </a>
            </div>
        </nav>
        <div class="p-4">
            <% chats.forEach(e=> { %>
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-header">
                        To : <%= e.to %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">From : <%= e.from %>
                        </h5>
                        <p class="card-text">
                            <%= e.message %>
                        </p>
                        <div class="d-flex gap-3">
                            <a href="#" class="btn btn-primary">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <%})%>
        </div>
        <div class="sticky-bottom bg-body-tertiary p-2">
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="Enter Your Name">
                        <label for="floatingInputGrid">Sender</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInputGrid" placeholder="Enter Reciever's Name">
                        <label for="floatingInputGrid">Reciever</label>
                    </div>
                </div>
            </div>
            <div class="input-group mt-2">
                <span class="input-group-text">@</span>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInputGroup1" placeholder="Username">
                    <label for="floatingInputGroup1">Message</label>
                </div>
                <span class="input-group-text">
                    <a href="#" class="btn btn-success">Send</a>
                </span>
            </div>
        </div>
    </div>

</body>

</html>