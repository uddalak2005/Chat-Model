<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="style.css">

</head>

<body>
    <div class="float scroll-wrapper" style="position: relative;">

        <div id="alert-container sticky-top mt-4" style="position: absolute; z-index: 10;"></div> <!-- Placeholder for alerts -->




        <nav class="navbar bg-body-secondary sticky-top" style="margin-bottom: 20px;">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    My Discussion Forum
                </a>
            </div>
        </nav>
        <div class="p-4 chatContainer">
            <% chats.forEach(e=> { %>
                <div class="card m-2 chat" style="width: 18rem;" data-chat-id="<%= e._id %>">
                    <div class="card-header">
                        To : <%= e.to %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">From : <%= e.from %>
                        </h5>
                        <p class="card-text">
                            <%= e.message %>
                        </p>
                        <div class="d-flex gap-3">
                            <a href="#" class="btn btn-primary" class="edit">Edit</a>
                            <a href="#" class="btn btn-danger" class="del">Delete</a>
                        </div>
                    </div>
                </div>
                <%})%>
        </div>
        <div class="sticky-bottom bg-body-secondary p-2">
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="from" placeholder="Enter Your Name" required>
                        <label for="from">Sender</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="email" class="form-control" id="to" placeholder="Enter Reciever's Name" required>
                        <label for="to">Reciever</label>
                    </div>
                </div>
            </div>
            <div class="input-group mt-2">
                <span class="input-group-text">@</span>
                <div class="form-floating">
                    <input type="text" class="form-control" id="message" placeholder="Username">
                    <label for="message">Message</label>
                </div>
                <span class="input-group-text">
                    <a href="#" class="btn btn-success" id="action">Send</a>
                </span>
            </div>
        </div>
    </div>

</body>
<script src="home.js"></script>

</html>